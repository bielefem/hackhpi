    <script type="text/javascript">
      // medical_attachments
      if (window.location.href.includes('?')) {
        $.ajax({
          url: '/patients/4.json',
          contentType: 'application/json',
          success: function(response) {

            $('#product-preview-row').html("");
            for (const i in response.medical_attachments) {

              $('#product-preview-row').append(`<div class="col-lg-3 col-md-6 col-xs-6">
                <a class="thumbnail">
                 <img class="thumbnail-img" src="/img/${response.medical_attachments[i].file_file_name.endsWith("jpg") ? "jpg" : "pdf"}.png">

                      <a href="${response.medical_attachments[i].file_url.replace("medium", "original")}"><h4>${response.medical_attachments[i].file_file_name}</h4></a>

                 </a>
              </div>`);
            }
          }
        });
      } else {
        //$('.content').html('');
      }
    </script>
